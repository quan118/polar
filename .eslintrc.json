{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:prettier/recommended",
    "plugin:storybook/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["react", "tailwindcss"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["*.jsx", "*.tsx", "*.ts", "*.js"]
    }
  ],
  "ignorePatterns": ["/dist", "/src-tauri", "/storybook-static"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0
  }
}
